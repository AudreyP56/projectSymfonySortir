{% extends 'base.html.twig' %}

{% block title %}Reset Password!{% endblock %}
{% block stylesheets %}
    <link href="{{ asset('library/website/css/login.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    {#{% block content %}#}
    <div class="container  mt-4">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}


    <div class="col-lg-6 col-md-8 login-box " style="
    margin: auto;">

        <div class="col-lg-12 login-title">
            Demande de r√©initialisation du mot de passe
        </div>
        <div class="col-lg-12 login-form">

            <div class="form-group">
                <div class="col-lg-8" style="
    margin: auto;
">
                    {{ form_start(form, { attr: { 'accept-charset' : 'utf-8' }}) }}

                    <div class="col-lg-6 form-group">
                        {{ form_widget(form.email, {'label': "mon email", 'attr' : { 'class': '' }}) }}
                    </div>
                    <div class="col-lg-6 login-button">
                        <button type="submit" name={{ field_name(form.send) }} class="btn btn-outline-primary">REINITIALISER</button>
                    </div>
                    {#                {{ form_rest(form) }}#}

                    {{ form_end(form) }}
                </div>
            </div>

        </div>
        <div class="col-lg-3 col-md-2"></div>

    </div>
{% endblock %}
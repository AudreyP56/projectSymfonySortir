{% extends 'base.html.twig' %}

{% block title %}Profil de {{ profil.pseudo }}{% endblock %}

{% block body %}
    {% include('navbar.html.twig') %}


    <div class="card container mt-3">
        <h2 class="card-header">{{ profil.pseudo }}</h2>
        <div class="card-body">
            <div class="row mb-3">
                <h6 class="form-label">Prénom : </h6>
                <p class="col">{{ profil.prenom }}</p>
            </div>
            <div class="row mb-3">
                <h6 class="form-label">Nom : </h6>
                <p class="col">{{ profil.nom }}</p>
            </div>
            <div class="row mb-3">
                <h6 class="form-label">Téléphone : </h6>
                <p class="col">{{ profil.telephone }}</p>
            </div>
            <div class="row mb-3">
                <h6 class="form-label">Email : </h6>
                <p class="col">{{ profil.email }}</p>
            </div>
            <div class="row mb-3">
                <h6 class="form-label">Site de rattachement : </h6>
                <p class="col"></p>
            </div>

        </div>
    </div>
{% endblock %}

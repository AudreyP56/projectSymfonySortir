{% extends 'base.html.twig' %}

{% block body %}

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="{{ path('sorties') }}">Sortir</a>
        <button class="navbar-toggler collapsed navbar-mobile" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>


        <div class="collapse navbar-collapse navbar-mobile" id="navbarTogglerDemo03" style>
            <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                        <a class="nav-link mt-1" href="">Villes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mt-1" href="">Sites</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link mt-1" href="{{ path('csv') }}">Ajout CSV</a>
                    </li>
                {% endif %}
                <li class="nav-item">
                    <a class="nav-link mt-1" href="{{ path('sorties') }}">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" style="width: min-content;" href="{{ path('gestionnaire_profil') }}" >
                        {% if(app.user.photo != null) %}
                            <img class="rounded-circle" width="30" height="30" src="./../uploads/{{ app.user.photo }}">
                        {% else %}
                            <img class="rounded-circle" width="30" height="30" src="./../uploads/imageDefaut.png" alt="Image par defaut de l'utilisateur">
                        {% endif %}
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link mt-1" href="{{ path('app_logout') }}"><i class="fas fa-power-off"></i></a>
                </li>
            </ul>
        </div>
    </nav>

{% endblock %}